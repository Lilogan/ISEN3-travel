extends layout

block head
  link(rel="stylesheet", href="../css/cities.css")

block content
  h1 Veuillez choisir une destination :
    each destination in data.destinations
      .destination.clickable(id=data.destinations.name)
        .nom
          h1 #{destination.name}
        .prix
          p Prix moyen du billet : #{destination.averagePrice}
        .tempsvol
          h2 • Temps de vol : #{destination.averageTime}
          p • Nombre de personnes : #{data.passenger}
        .weather
          p • La note météo : #{destination.weather.note}
